{
  "name": "koa-typescript-hmr-proxy",
  "version": "1.0.0",
  "description": "Koa + react + typescript + Material UI + proxied hot module reloading = fun",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-app && npm run build-server && npm run build-hmr",
    "build-app": "$(npm bin)/webpack --env=app",
    "build-hmr": "$(npm bin)/webpack --env=hmr",
    "build-server": "$(npm bin)/webpack --env=server",
    "watch": "npm run watch-server & npm run watch-hmr",
    "watch-hmr": "$(npm bin)/webpack --watch --env=hmr",
    "watch-server": "$(npm bin)/webpack --watch --env=server"
  },
  "author": "Mark Wibrow",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^3.4.0",
    "canopi": "^1.3.1",
    "http-proxy-middleware": "^0.19.0",
    "koa": "^2.6.1",
    "koa-connect": "^2.0.1",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-static-cache": "^5.1.2",
    "koa-webpack-middleware": "^1.0.7",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@types/http-proxy-middleware": "^0.17.6",
    "@types/jest": "^23.3.9",
    "@types/koa": "^2.0.46",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-mount": "^3.0.1",
    "@types/koa-router": "^7.0.32",
    "@types/koa-static-cache": "^5.1.0",
    "@types/node": "^10.12.2",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/webpack": "^4.4.17",
    "@types/webpack-env": "^1.13.6",
    "@types/webpack-node-externals": "^1.6.3",
    "nodemon-webpack-plugin": "^3.0.1",
    "pkginfo": "^0.4.1",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.0",
    "webpack-cli": "^3.1.2"
  }
}
